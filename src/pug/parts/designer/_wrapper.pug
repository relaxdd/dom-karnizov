  var steps = [
    { text: "Форма карниза", isCompleted: true },
    { text: "Количество рядов", isCompleted: true },
    { text: "Выбор трубы (профиля)", isCompleted: false },
    { text: "Выбор кронштейна", isCompleted: false },
    { text: "Выбор наконечника", isCompleted: false },
    { text: "Выбор колец и крючков", isCompleted: false },
    { text: "Оформление заказа", isCompleted: false },
  ]

  var materials = [
    { src: "antique.png", text: "Антик" },
    { src: "chrome.png", text: "Хром" },
    { src: "chrome-mat.png", text: "Хром Мат." },
    { src: "stainless-steel.png", text: "Нерж. Сталь" },
    { src: "gold.png", text: "Золото" },
    { src: "gold-mat.png", text: "Золото Мат." },
    { src: "black.png", text: "Черный" },
    { src: "black-mat.png", text: "Черный Мат." },
    { src: "black-gold.png", text: "Черное Золото" },
    { src: "white.png", text: "Белый" },
    { src: "white-gold.png", text: "Белое Золото" },
    { src: "chocolate.png", text: "Шоколад" },
